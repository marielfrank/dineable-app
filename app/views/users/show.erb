<div class="jumbotron">
  <h1>Hey there, <%= @user.username %></h1>
  <div class="row">
    <div class="col-sm-8">
      <h3>Your Restaurants</h3>

      <% @restaurants = @user.restaurants.sort_by { |rest| rest.slug } %>
      <ul>
        <% @restaurants.each do |restaurant| %>
          <li>
            <a href="/restaurants/<%= restaurant.slug %>">
              <%= restaurant.name %>
            </a>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="col-sm-4">
      <a href="/restaurants/new" class="btn btn-primary" role="button">
        Add a new restaurant
      </a>
      <h4>
        <a href="/restaurants">
          See all restaurants by name
        </a>
      </h4>
      <h4>
        <a href="/dietary-preferences">
          See all dietary preferences by name
        </a>
      </h4>
    </div>
  </div>
</div>
<div class="col-sm-4">
  <form action="/logout" method="post">
    <input type="submit" value="Log Out" class="btn btn-outline-secondary" type="button">
  </form>
</div>
