<div class="jumbotron">
  <h1>Make changes to <%= @restaurant.name %></h1>
  <form class="form" action="/restaurants/<%= @restaurant.slug %>" method="post">
    <label for="name">Name</label><br>
    <input type="text" name="restaurant[name]" value="<%= @restaurant.name %>">
    <br><br>
    <label for="address">Address</label><br>
    <input type="text" name="restaurant[address]" value="<%= @restaurant.address %>">
    <br><br>
    <h3>Dietary Preferences Accommodated</h3>
    <label for="diet_prefs">Select an existing preference</label><br>
    <% DietPref.all.each do |pref| %>
      <input type="checkbox" name="restaurant[diet_pref_ids][]" value="<%= pref.id %>" id="<%= pref.id %>" <%= 'checked' if @restaurant.diet_prefs.include?(pref) %>>
        <%= pref.name %>
      </input>
      <br>
    <% end %>
    <br>
    <label for="diet_pref_name">Or add a new one</label><br>
    <input type="text" name="diet_pref[name]" id="diet_pref_name">
    <br><br>
    <input class="btn btn-primary" type="submit" value="Update <%= @restaurant.name %>">
  </form>
</div>
